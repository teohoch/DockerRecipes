<h2> <%= t :recover_password %> </h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-inputs">
    <%= f.input :email %>

  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>

<br>

